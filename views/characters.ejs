    <title>Characters | DOAXVV API</title>
</head>
<body>
    <%- include('partials/header') %>
    <h1 class="title">CHARACTERS</h1>
    <main class="list">
        <% listchars.forEach(girl=>{ %>
            <div class="card-girl <%= girl.isBirthdayToday ? 'birthday' : '' %>">
                <div class="cg-left">
                    <img src="<%= girl.photo %>">
                </div>
                <div class="cg-right">
                    <h2><%= girl.name %></h2>
                    <i><%= girl.occupation %></i>
                    <p><%= girl.age %> years</p>
                    <a href="/character/<%= girl.id %>">Details</a>
                </div>
            </div>
        <% }) %>
    </main>
    <%- include('partials/footer') %>
</body>
</html>